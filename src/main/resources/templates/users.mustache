<html xmlns="http://www.w3.org/1999/html">
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>
<body>
<!-- Optional JavaScript -->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
<div class="row">
    <div class="col-md-1"><form action="/admin" method="get">
        <input type="submit" value="Назад" class="text-center btn btn-primary"/>
    </form></div>
    <div class="col-md-10"><h1 class="text-center">Список зарегестрированных пользователей</h1></div>
    <div class="col-md-1"><form action="/logout" method="post">
        <input type="submit" value="Sign Out" class="text-right btn btn-primary"/>
    </form></div>
</div>
<table class="table table-hover" id="userTable">
    <thead class="thead-dark">
    <tr>
        <th scope="col">#</th>
        <th scope="col">Имя</th>
        <th scope="col">Role</th>
        <th scope="col">Действия с пользователями</th>
    </tr>
    </thead>
    <tbody>
    {{#users}}
        <tr>

            <th scope="row">{{id}}</th>
            <td>{{username}}</td>
            <td>{{roles}}</td>
            <td><div class="row"> <form action="/admin/users" method="post">
                <input type="hidden" value="{{id}}" name="id">
                <button type="submit" class="btn btn-primary">Check </button>
            </form>
            </div>
            </td>
        </tr>
    {{/users}}
    </tbody>
</table>
</body>
</html>